---
import Image from "astro/components/Image.astro";
import abb from "../../assets/images/logos/abb.png";
import cisco from "../../assets/images/logos/cisco.png";
import ezviz from "../../assets/images/logos/ezviz.png";
import hikvision from "../../assets/images/logos/hik-vision.png";
import jbl from "../../assets/images/logos/jbl.png";
import panasonic from "../../assets/images/logos/panasonic.svg";
import ubiquiti from "../../assets/images/logos/ubiquiti.png";
import zkteco from "../../assets/images/logos/zkteco.png";
---

<div>
  <h2 class="text-5xl font-extrabold uppercase">Our Partners</h2>
  <p class="text-lg">
    We collaborate with industry-leading brands to deliver the best smart home
    solutions.
  </p>

  <div class="grid grid-cols-4 gap-4 mt-8 justify-items-center">
    <Image
      src={abb}
      alt="ABB"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={ezviz}
      alt="EZVIZ"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={hikvision}
      alt="Hikvision"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={ubiquiti}
      alt="Ubiquiti"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />

    <Image
      src={panasonic}
      alt="Panasonic"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={zkteco}
      alt="ZKTeco"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={jbl}
      alt="JBL"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
    <Image
      src={cisco}
      alt="Cisco"
      class="h-24 w-full bg-base-200/40 object-contain p-2 rounded-xl max-w-64"
    />
  </div>
</div>
