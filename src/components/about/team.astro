---
import Image from "astro/components/Image.astro";
import Team1 from "../../assets/images/team/team-1.webp";
import Team2 from "../../assets/images/team/team-2.webp";
import Team3 from "../../assets/images/team/team-3.webp";
import Team4 from "../../assets/images/team/team-4.webp";
import Carousel from "../../ui/carousel.astro";
import SectionHead from "../../ui/section-head.astro";

const TEAM = [
  {
    name: "Mohammed Alkhodhri",
    role: "Founder & CEO",
    image: Team1,
  },
  {
    name: "Bushra Aziz",
    role: "Lead Engineer",
    image: Team2,
  },
  {
    name: "Ahmad Hameed",
    role: "Projects Manager",
    image: Team3,
    bg: "bg-black",
  },
  {
    name: "Sanjay Aarav",
    role: "Smart Home Specialist",
    image: Team4,
  },
];
---

<div>
  <SectionHead
    title="Meet Our Team"
    description="Our team loves transforming traditional homes into smart homes, its all about passion and innovation."
  />
  <div class="sm:grid sm:grid-cols-4 mt-8 gap-4 hidden">
    {
      TEAM.map((member) => (
        <div
          class:list={[
            "flex flex-col justify-center items-center gap-2 h-fit rounded-4xl pb-4 bg-base-200",
            "hover:bg-base-300 transition duration-300",
          ]}
        >
          <Image
            src={member.image}
            alt={member.name}
            class="w-full h-full object-cover p-2 rounded-4xl"
          />
          <div class="text-center">
            <h2 class="text-xl font-semibold">{member.name}</h2>
            <p class="text-md">{member.role}</p>
          </div>
        </div>
      ))
    }
  </div>

  <div class="xl:hidden">
    <Carousel length={TEAM.length} name="team">
      {
        TEAM.map((member, index) => (
          <div
            class:list={[
              "flex flex-col justify-center items-center gap-1 h-fit rounded-4xl pb-2 ",
              "carousel-item w-[90%] mx-auto bg-base-100 mr-3",
            ]}
            id={`team-item-${index}`}
          >
            <Image
              src={member.image}
              alt={member.name}
              class="w-full h-full object-cover p-1 rounded-4xl"
            />
            <div class="text-center">
              <h2 class="text-xl font-semibold">{member.name}</h2>
              <p class="text-md">{member.role}</p>
            </div>
          </div>
        ))
      }
    </Carousel>
  </div>
</div>
