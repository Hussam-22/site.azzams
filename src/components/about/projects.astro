---
import Project1 from "../../assets/images/projects/project-1.webp";
import Project2 from "../../assets/images/projects/project-2.webp";
import Project3 from "../../assets/images/projects/project-3.webp";
import Project4 from "../../assets/images/projects/project-4.webp";

import Card from "../../ui/card.astro";
import Carousel from "../../ui/carousel.astro";
import SectionHead from "../../ui/section-head.astro";

const PROJECTS = [
  {
    title: "New Office Tech Setup",
    description:
      "New office setup tailored to boost productivity and streamline daily operations.",
    image: Project3,
    badges: [
      "VoIP Phones",
      "WiFi Routers",
      "Fingerprint Attendance",
      "CCTV Cameras",
    ],
  },
  {
    title: "KNX Smart Home Installation",
    description:
      "Smart KNX system setup delivering seamless control, energy efficiency, and long-term reliability.",
    image: Project1,
    badges: [
      "Smart Switches",
      "Smart Touch Screens",
      "Smart Curtains",
      "Smart Gate Access",
    ],
  },
  {
    title: "Security Camera Installation",
    description:
      "A Complete CCTV setup tailored to safeguard your space with reliable, high-definition surveillance.",
    image: Project2,
    badges: ["Security Cameras", "Remote Monitoring"],
  },
  {
    title: "Zigbee Smart Home Installation",
    description:
      "WiFi smart home installation for seamless,wireless control across entire apartment.",
    image: Project4,
    badges: [
      "Smart Switches",
      "Smart Lights",
      "Smart Door handle",
      "Smart Curtains",
    ],
  },
];
---

<div>
  <SectionHead
    title="Recent Projects"
    description="Here are some of our recent projects that showcase our expertise in transforming homes with modern smart technology."
  />

  <div
    class="sm:grid grid-cols-4 mt-4 bg-base-200 p-2 rounded-4xl gap-2 hidden"
  >
    {
      PROJECTS.map((project) => (
        <Card
          title={project.title}
          description={project.description}
          image={project.image}
          badges={project.badges}
        />
      ))
    }
  </div>

  <Carousel length={PROJECTS.length} name="projects">
    {
      PROJECTS.map((project, index) => (
        <div
          class="carousel-item w-[90%] bg-base-100 rounded-4xl"
          id={`project-item-${index}`}
        >
          <Card
            title={project.title}
            description={project.description}
            image={project.image}
            badges={project.badges}
          />
        </div>
      ))
    }
  </Carousel>
</div>
