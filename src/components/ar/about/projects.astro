---
import Project1 from "../../../assets/images/projects/project-1.webp";
import Project2 from "../../../assets/images/projects/project-2.webp";
import Project3 from "../../../assets/images/projects/project-3.webp";
import Project4 from "../../../assets/images/projects/project-4.webp";

import Card from "../../../ui/card.astro";
import Carousel from "../../../ui/carousel.astro";
import SectionHead from "../../../ui/section-head.astro";

const PROJECTS = [
  {
    title: "تجهيز تقني لمكتب جديد",
    description:
      "تجهيز مكتب جديد مصمم لتعزيز الإنتاجية وتسهيل العمليات اليومية.",
    image: Project3,
    badges: ["هواتف VoIP", "موجهات واي فاي", "بصمة الحضور", "كاميرات مراقبة"],
  },
  {
    title: "تركيب منزل ذكي بنظام KNX",
    description:
      "تركيب نظام KNX ذكي يوفر تحكم سلس وكفاءة في الطاقة وموثوقية طويلة الأمد.",
    image: Project1,
    badges: [
      "مفاتيح ذكية",
      "شاشات لمس ذكية",
      "ستائر ذكية",
      "بوابة دخول ذكية",
      "تحكم ذكي في التكييف",
    ],
  },
  {
    title: "تركيب كاميرات أمان",
    description:
      "نظام كاميرات مراقبة متكامل لحماية المكان بدقة عالية وموثوقية.",
    image: Project2,
    badges: ["كاميرات أمان", "مراقبة عن بعد"],
  },
  {
    title: "تركيب منزل ذكي بنظام Zigbee",
    description:
      "تركيب منزل ذكي يعمل بالواي فاي لتحكم لاسلكي سلس في جميع أنحاء الشقة.",
    image: Project4,
    badges: [
      "مفاتيح ذكية",
      "إضاءة ذكية",
      "مقبض باب ذكي",
      "ستائر ذكية",
      "ترموستات مكيف ذكي",
    ],
  },
];
---

<div>
  <SectionHead
    title="مشاريع حديثة"
    description="هذه بعض مشاريعنا الأخيرة التي تبرز خبرتنا في تحويل المنازل بالتقنيات الذكية الحديثة."
    lang="ar"
  />

  <div
    class="sm:grid grid-cols-4 mt-4 bg-base-100 p-2 rounded-4xl gap-2 hidden"
  >
    {
      PROJECTS.map((project) => (
        <Card
          title={project.title}
          description={project.description}
          image={project.image}
          badges={project.badges}
          lang="ar"
        />
      ))
    }
  </div>

  <Carousel length={PROJECTS.length} name="projects">
    {
      PROJECTS.map((project, index) => (
        <div class="carousel-item w-[90%]" id={`project-item-${index}`}>
          <Card
            title={project.title}
            description={project.description}
            image={project.image}
            badges={project.badges}
            lang="ar"
          />
        </div>
      ))
    }
  </Carousel>
</div>
