---
import SectionHead from "../../../ui/section-head.astro";
import SvgColor from "../../../ui/svg-color.astro";

const WHAT_YOU_GET = [
  {
    title: "منتجات متميزة",
    description:
      "ابقَ في المقدمة مع أجهزة ذكية تقدم الأداء والموثوقية والابتكار.",
    icon: "public/assets/icons/premium.svg",
  },
  {
    title: "استشارة خبراء",
    description: "بدون تخمين. نصائح تناسب احتياجاتك تماماً.",
    icon: "public/assets/icons/expert.svg",
  },
  {
    title: "حلول مصممة خصيصاً",
    description: "استراتيجيات مخصصة لتناسب احتياجاتك الدقيقة.",
    icon: "public/assets/icons/puzzle.svg",
  },
  {
    title: "دعم مستمر",
    description: "دعم دائم لأن رضاك ليس خياراً إضافياً.",
    icon: "public/assets/icons/support.svg",
  },
];
---

<div>
  <SectionHead
    title="ماذا ستحصل عليه"
    description="استكشف الفوائد التي نقدمها مع كل خدمة."
    lang="ar"
  />
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
    {
      WHAT_YOU_GET.map((item) => (
        <div class="bg-base-200 p-4 rounded-4xl">
          <SvgColor
            iconPath={item.icon}
            className="w-12 h-12 text-base-content"
          />
          <h3 class="text-2xl font-semibold">{item.title}</h3>
          <p class="text-xl">{item.description}</p>
        </div>
      ))
    }
  </div>
</div>
