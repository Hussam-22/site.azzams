---
import Image from "astro/components/Image.astro";
import Logo from "../assets/logo.svg";
import Button from "../ui/button.astro";
---

<div
  class="backdrop-blur-xl fixed left-1/2 transform -translate-x-1/2 top-6 z-50 px-4 flex flex-row items-center justify-between h-16 rounded-3xl w-4/12 border border-base-200"
>
  <div class="flex flex-row items-center gap-2 justify-between w-full">
    <Image src={Logo} alt="Azzams Logo" class="h-14 w-14" />
    <div class="flex flex-row gap-3 px-1 font-semibold text-md">
      <a>Home</a>
      <a>About</a>
      <a>Services</a>
      <a>Contact</a>
    </div>
    <Button text="Get free quote" />
  </div>
</div>
