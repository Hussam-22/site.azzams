---
import fs from "fs/promises";

const {
  iconPath,
  className = "text-black w-12 h-12",
  alt = "icon",
} = Astro.props;

let svgContent = "";
try {
  if (iconPath) {
    svgContent = await fs.readFile(iconPath, "utf8");
    // Normalize fill & stroke to use currentColor so Tailwind can control it, but keep fill="none"
    svgContent = svgContent
      .replace(/fill="(?!none)[^\"]*"/g, 'fill="currentColor"')
      .replace(/stroke="[^\"]*"/g, 'stroke="currentColor"')
      // Remove hardcoded width/height so Tailwind can control sizing
      .replace(/(width|height)="[^\"]*"/g, "");
  }
} catch (e) {
  svgContent = `<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'>
    <text x='0' y='15' font-size='12'>Icon not found</text>
  </svg>`;
}
---

<span
  class={`inline-flex items-center justify-center ${className}`}
  aria-label={alt}
  role="img"
>
  <span
    class="w-full h-full [&>svg]:w-full [&>svg]:h-full"
    set:html={svgContent}
  />
</span>
