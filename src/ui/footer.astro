---
import Image from "astro/components/Image.astro";
import mailIcon from "../assets/icons/email.svg";
import phoneIcon from "../assets/icons/phone.svg";
import whatsappIcon from "../assets/icons/whatsapp-white.svg";
import Logo from "../assets/logo-light.svg";
---

<footer
  class="footer sm:footer-horizontal bg-black text-white px-10 p-4 flex justify-between items-center"
>
  <aside class="flex flex-row gap-4 items-center">
    <Image src={Logo} alt="Azzams Logo" class="h-12 w-12" />
    <p class="font-light">
      <span class="font-bold">Azzams</span> Your partner in smart home solutions.
    </p>
    <nav>
      <div class="grid grid-flow-col gap-4">
        <a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
            ></path>
          </svg>
        </a>
        <a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
            ></path>
          </svg>
        </a>
        <a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
            ></path>
          </svg>
        </a>
      </div>
    </nav>
  </aside>
  <p>All rights reserved &copy; {new Date().getFullYear()} Azzams</p>
  <div class="flex flex-row gap-4">
    <div class="flex items-center gap-1">
      <Image src={mailIcon} alt="Mail Icon" class="h-5 w-5" />
      <a href="mailto:info@azzams.com">info@azzams.com</a>
    </div>
    <div class="flex items-center gap-1">
      <Image src={phoneIcon} alt="Phone Icon" class="h-5 w-5" />
      <a href="tel:+97145989049">+971 459 89049</a>
    </div>
    <div class="flex items-center gap-1">
      <Image src={whatsappIcon} alt="WhatsApp Icon" class="h-5 w-5" />
      <a href="https://wa.me/97156522317">+971 565 22317</a>
    </div>
  </div>
</footer>
