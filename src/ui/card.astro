---
import Image from "astro/components/Image.astro";

const { title, description, image, badges, lang = "en" } = Astro.props;
---

<div class="bg-base-200 w-full rounded-4xl">
  <figure>
    <Image
      src={image}
      alt={title}
      class="w-full h-96 object-cover rounded-t-4xl"
    />
  </figure>
  <div class="py-2 flex flex-col gap-2 px-4">
    <h2 class:list={["font-bold", lang === "ar" ? "text-xl" : ""]}>{title}</h2>
    <p class:list={["font-light", lang === "ar" ? "text-lg" : "text-sm"]}>
      {description}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        badges &&
          badges.map((badge) => (
            <div class="badge bg-sky-200 dark:bg-sky-900 badge-sm rounded-4xl">
              {badge}
            </div>
          ))
      }
    </div>
  </div>
</div>
