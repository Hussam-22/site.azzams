---
import Image from "astro/components/Image.astro";

const { title, icon } = Astro.props;
---

<div
  class="border-base-200 border rounded-3xl p-4 flex flex-col items-center gap-2 h-fit relative overflow-hidden hover:bg-base-200/40 transition-all duration-300"
>
  <Image
    src={icon}
    alt={title}
    class="h-24 w-full hover:pb-1 transition-all duration-300"
  />
  <p class="text-sm font-bold">{title}</p>
</div>
