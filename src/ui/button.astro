---
const { text, size, className } = Astro.props;

const buttonSize =
  size === "large" ? "text-xl py-3 px-6" : "text-base py-2 px-4";
---

<div
  class:list={[
    `bg-gradient-to-br from-sky-500 to-violet-500 text-white ${buttonSize} rounded-4xl hover:from-sky-600 hover:to-violet-600 transition-colors duration-300 w-fit font-semibold text-center`,
    className,
  ]}
>
  <a href="/get-free-quote">{text}</a>
</div>
