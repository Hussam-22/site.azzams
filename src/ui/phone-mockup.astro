---
import { Image } from "astro:assets";

const { className, imgSrc, text } = Astro.props;
---

<div class={className}>
  <div class="relative w-52 overflow-visible rounded-4xl bg-black p-2">
    <!-- Side Buttons -->
    <div
      class="absolute top-20 h-12 w-2 rounded-4xl bg-black"
      style="right: -3px;"
    >
    </div>
    <div
      class="absolute top-20 h-12 w-2 rounded-4xl bg-black"
      style="left: -3px;"
    >
    </div>
    <div
      class="absolute top-36 h-12 w-2 rounded-4xl bg-black"
      style="left: -3px;"
    >
    </div>

    <!-- Top Button/Element -->
    <div
      class="absolute left-0 right-0 top-3 z-50 ml-auto mr-auto h-4 w-4 rounded-full bg-black"
    >
    </div>

    <!-- Image -->
    <Image
      src={imgSrc}
      class="h-full w-full rounded-4xl object-contain"
      alt={text || "phone mockup"}
      loading="lazy"
      quality="max"
    />
  </div>
  {text && <h2 class:list={["mt-2 w-52 text-center font-bold"]}>{text}</h2>}
</div>
