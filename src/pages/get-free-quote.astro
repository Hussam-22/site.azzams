---
import Image from "astro/components/Image.astro";
import contactUsImage from "../assets/images/contact-us-img-2.webp";
import ContactUsForm from "../components/contact-us/contact-us-form.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Get Free Quote - Azzams Smart Home Technology">
  <div
    class="bg-base-200 rounded-4xl p-6 sm:p-4 xl:flex items-center justify-between gap-8 hidden"
  >
    <div class="flex flex-row gap-12 items-center justify-center">
      <div class="w-6/12 flex flex-col justify-center text-center gap-4 pl-4">
        <h1 class="text-5xl font-extrabold uppercase">Get free quote</h1>
        <p class="text-lg">
          Let’s bring smart solutions to your space. Fill in the form and our
          team will get in touch with tailored recommendations—fast, clear, and
          obligation-free.
        </p>
        <ContactUsForm />
      </div>
      <div class="w-6/12">
        <Image
          src={contactUsImage}
          alt="Contact Us"
          class="rounded-4xl w-full h-full object-cover"
        />
      </div>
    </div>
  </div>

  <div
    class="rounded-4xl px-6 py-12 flex items-center justify-between gap-8 xl:hidden bg-blend-overlay bg-black/45 bg-cover bg-center relative"
  >
    <div class="flex flex-row items-center justify-center">
      <div
        class="flex flex-col justify-center text-center gap-4 text-white z-20"
      >
        <h1 class="text-5xl font-extrabold uppercase">Get free quote</h1>
        <p class="text-lg">
          Let’s bring smart solutions to your space. Fill in the form and our
          team will get in touch with tailored recommendations—fast, clear, and
          obligation-free.
        </p>
        <ContactUsForm />
      </div>
      <div class="absolute inset-0 bg-black/50 rounded-4xl z-10"></div>
      <Image
        src={contactUsImage}
        alt="Hero Image"
        class="h-full w-full object-cover rounded-4xl z-0 absolute inset-0"
        loading="eager"
      />
    </div>
  </div>
</Layout>
